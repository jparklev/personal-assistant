{
  "name": "personal-assistant",
  "version": "1.0.0",
  "description": "Personal AI assistant with Discord interface, blips, captures, and scheduled tasks",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "typecheck": "bunx tsc --noEmit",
    "build": "bunx tsc",
    "deploy:commands": "bun run src/discord/deploy-commands.ts",
    "task:morning": "bun run src/scheduler/runner.ts morning-checkin",
    "task:weekly": "bun run src/scheduler/runner.ts weekly-reconsolidation",
    "task:sync": "bun run src/scheduler/runner.ts vault-sync",
    "blips:cleanup": "bun run src/tools/blips-cleanup.ts"
  },
  "dependencies": {
    "discord.js": "^14.14.1",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
